<%= render 'navbar' %>

<h2 class="name"><%=@restaurant.name  %></h2>
<div class="links">
  <%= link_to "Edit", edit_restaurant_path  %>
  <%= link_to "Delete", restaurant_path, method: :delete, data: { confirm: "Are you sure you wish to delete this restaurant?" }  %>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant.id)  %>
</div>
<div>
  <p class="category"><%=@restaurant.category  %> </p>
  <p class="address"><%=@restaurant.address  %></p>
  <p class="phone_number"><%=@restaurant.phone_number  %></p>
</div>
<div class="reviews">
    <ul><% @restaurant.reviews.each do |review|  %>
      <li><em><%= review.content  %></em>  - rating: <%= review.rating  %></li>
      <% end %>
    </ul>
  </div>
